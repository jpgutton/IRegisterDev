@using System.Globalization
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authentication;

@model IList<FrontEndAdmin.Models.NPOFields>

@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Dashboard v.1";
}

<h2>Default fields</h2>

<div class="switch">
    <div class="onoffswitch">
        <input type="checkbox" checked class="onoffswitch-checkbox" id="example1">
        <label class="onoffswitch-label" for="example1">
            <span class="onoffswitch-inner"></span>
            <span class="onoffswitch-switch"></span>
        </label>
    </div>
</div>


<br />

    <form asp-action="DefaultFields" asp-controller="NPO">
        @Html.ValidationSummary(true)

        <div class="form-vertical">
            <div class="form-group">
                <label asp="Name" class="col-md-3 control-label"></label>
                <label asp="Active" class="col-md-3 control-label"></label>
                <label asp="Mandatory" class="col-md-3 control-label"></label>
            </div>



            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-group">
                    @*<div class="row">*@
                        @Html.HiddenFor(m => m[i].FieldName)
                        <div class="col-md3">@Html.DisplayFor(m => m[i].FieldLabel)</div>
                        <div class="col-md3">

                            <div class="switch">
                                <div class="onoffswitch">
                                    @Html.CheckBoxFor(mod => mod[i].FieldActivate, new { @class = "onoffswitch-checkbox" })
                                    <label class="onoffswitch-label" for="[i].FieldActivate">
                                        <span class="onoffswitch-inner"></span>
                                        <span class="onoffswitch-switch"></span>
                                    </label>
                                </div>
                            </div>


                        </div>
                        <div class="col-md3">

                            <div class="switch">
                                <div class="onoffswitch">
                                    @Html.CheckBoxFor(mod => mod[i].FieldMandatory, new { @class = "onoffswitch-checkbox" })
                                    <label class="onoffswitch-label" for="[i].FieldMandatory">
                                        <span class="onoffswitch-inner"></span>
                                        <span class="onoffswitch-switch"></span>
                                    </label>
                                </div>
                            </div>

                        </div>
                    </div>
                @*</div>*@
            }
            <input type="submit" class="btn btn-success" value="Update" />
        </div>

    </form>

